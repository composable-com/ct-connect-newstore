  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "./src",
    "inlineSourceMap": true,
    "paths": {
      "common-connect": ["./node_modules/common-connect/src"],
      "common-connect/*": ["./node_modules/common-connect/src/*"]
    }
  }
}
